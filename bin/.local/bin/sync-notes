#!/bin/bash

# CYAN='\033[0;36m'
# NC='\033[0m'
# TODO: Add colors back with arugment to disable

print_usage() {
  echo "Usage: $0 <up|down|dry> [file]"
  echo "  up:    Send notes to server"
  echo "  down:  Grab notes from server"
  echo "  dry:   Dry run sending and grabbing"
  echo "  file:  Optional file"
}

FILE=""
# Check if file is specified
if [ -n "$2" ]; then
  # Strip file of leading directory up to notes
  FILE="/${2#*notes/}"
fi

VERBOSE=""

case $1 in
  "up")
    rsync -azuP$VERBOSE --mkpath --delete ~/notes/$FILE smtucker:~/notes$FILE
    ;;
  "down")
    rsync -azuP$VERBOSE --mkpath --delete smtucker:~/notes/$FILE ~/notes$FILE
    ;;
  "dry")
    echo -e "\n${CYAN}Dry run sending notes$FILE ...${NC}\n"
    rsync -avznu --stats --delete ~/notes/$FILE smtucker:~/notes$FILE
    echo -e "\n\n${CYAN}Dry run grabbing notes$FILE...\n${NC}"
    rsync -avznu --stats --delete smtucker:~/notes/$FILE ~/notes$FILE
    ;;
  *)
    echo "Unknown option: $1"
    print_usage
    ;;
esac

